			<xsd:element ref="BLUE_LEVEL">
			</xsd:element>
			<xsd:element ref="ALPHA_LEVEL" minOccurs="0">
			</xsd:element>
		</xsd:all>
	</xsd:complexType>
	<xsd:element name="RED_LEVEL" id="RED_LEVEL" type="t_RED_LEVEL">
		<xsd:annotation>
			<xsd:documentation source="RED_LEVEL">
