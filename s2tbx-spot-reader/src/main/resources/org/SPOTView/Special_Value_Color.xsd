	<xsd:simpleType name="t_BLUE_LEVEL" id="t_BLUE_LEVEL">
		<xsd:restriction base="ZeroOne">
		</xsd:restriction>
	</xsd:simpleType>
	<xsd:element name="ALPHA_LEVEL" id="ALPHA_LEVEL" type="t_ALPHA_LEVEL">
