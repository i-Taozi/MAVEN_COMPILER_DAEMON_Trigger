			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:simpleType name="t_ALPHA_LEVEL" id="t_ALPHA_LEVEL">
		<xsd:restriction base="ZeroOne">
		</xsd:restriction>
	</xsd:simpleType>
